<!DOCTYPE html>
<html lang="en">
<%- include('./particles/head') %>
<body>
    
    <%- include('./particles/nav') %>

    <div class="container mt-3 row row-cols-4" style="margin-left: 100px;">
        
        <% blogs.forEach(blogs => { %>
        <div class="col" style="padding: 5px;">
        <div class="card" style="width: 18rem;">
        <img src="<%= blogs.coverImgUrl %>" class="card-img-top" alt="..." height="300px" >
        <div class="card-body">
        <h5 class="card-title"><%= blogs.title%></h5>
        
        <a href="/blog/<%=blogs._id%>" class="btn btn-primary">View</a>
        </div>
        </div>
        </div>
        <% }) %>
    </div>

   
<%- include('./particles/scripts') %>
</body>
</html>